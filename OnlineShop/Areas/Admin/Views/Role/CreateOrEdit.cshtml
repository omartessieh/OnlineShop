@{
    ViewData["Title"] = ViewBag.Title;
}

<h2 class="text-info">@ViewData["Title"]</h2>

<form asp-action="CreateOrEdit" method="post" id="role-form" enctype="multipart/form-data">
    <div class="p-4 rounded border">
        <div class="form-group row">
            <div class="col-2">
                <label>Role Name</label>
            </div>
            <input type="hidden" value="@ViewBag.Id" name="id" />
            <div class="col-5">
                <input id="name" name="name" required="required" value="@ViewBag.Name" class="form-control" />
            </div>
            <div class="col-5">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            </div>
        </div>

        <br />

        <div class="form-group">
            <input type="submit" class="btn btn-primary" value="@(ViewBag.Id == null ? "Create" : "Update")" />
            <a asp-action="Index" class="btn btn-success">Back to List</a>
        </div>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}