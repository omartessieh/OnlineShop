﻿@using OnlineShop.Models;
@model IEnumerable<SpecialTag>

@{
    ViewData["Title"] = "Index";
}

<br />
<br />

<div class="row">
    <div class="col-6">
        <h2 class="text-info">Special Tag List</h2>
    </div>
    <div class="col-6 text-right">
        <a asp-action="CreateOrEdit" class="btn btn-info" style="float: right;"><i class="fas fa-plus"></i>&nbsp; New Tag Name</a>
    </div>
</div>

<br />

<div>
    <table class="table table-striped border">
        <tr class="table-info">
            <th>
                @Html.DisplayNameFor(c => c.Name)
            </th>
            <th></th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td style="width: 150px;">
                    <div class="btn-group">
                        <a asp-action="CreateOrEdit" asp-controller="SpecialTag" class="btn btn-primary" asp-route-id="@item.Id">
                            <i class="far fa-edit"></i>
                        </a>
                        <a asp-action="Details" asp-controller="SpecialTag" class="btn btn-success" asp-route-id="@item.Id">
                            <i class="fas fa-list-ul"></i>
                        </a>
                        <a asp-action="Delete" asp-controller="SpecialTag" class="btn btn-danger" asp-route-id="@item.Id">
                            <i class="fas fa-trash-alt"></i>
                        </a>
                    </div>
                </td>
            </tr>
        }
    </table>
</div>

@section scripts {
    <script src="//cdn.jsdelivr.net/npm/alertifyjs@1.11.2/build/alertify.min.js"></script>

    <script type="text/javascript">
        $(function () {
            var save = '@TempData["save"]'
            if (save != '') {
                alertify.success(save);
            }
            var edit = '@TempData["edit"]'
            if (edit != '') {
                alertify.success(edit);
            }
            var del = '@TempData["delete"]'
            if (del != '') {
                alertify.error(del);
            }
        })
    </script>
}